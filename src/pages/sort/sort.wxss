/* sort */
.sort {
  flex: 1;
  background-color: white;
}

.swiper-box {
  margin: 16rpx 22rpx 20rpx 22rpx;
  height: 220rpx; /* 200rpx */
}
.swiper-item {
  width: 100%;
  height: 220rpx;
  border-radius: 8rpx;
}
.sort-box {
  
}
.sort-tab-box {
  width: 186rpx;
  min-width: 186rpx;
  overflow-y: scroll;
  border-right: solid 1rpx #e0e0e0;
}
.sort-tab-view {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-top: solid 1rpx #e0e0e0;
  color: #636363;
  font-size: 30rpx;
}
.sort-tab-sel {
  color: white;
  font-size: 34rpx;
  font-weight: 600;
  background-color: #323232;
}

/* 列表 */
.sort-grid {
  flex: 1;
  height: 100%;
  overflow-y: scroll;
  display: grid;
  column-gap: 24rpx;
  row-gap: 24rpx;
  margin: 32rpx;
  justify-content: center;
  grid-template-rows: repeat(3, 200rpx);
  grid-template-columns: repeat(2, 1fr);
}
.item-box {
  height: 200rpx;
  position: relative;
}
.item-img {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: violet;
}
.item-mark {
  width: 100%;
  height: 200rpx;
  top: 0;
  left: 0;
  position: absolute;
  border-radius: 12rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.item-text {
  color: white;
  font-size: 32rpx;
  /* text-indent: 24rpx; */
  /* overflow: hidden; */
}
