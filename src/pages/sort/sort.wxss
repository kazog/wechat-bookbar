/* sort */
.s-container {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.swiper-box {
  margin: 16rpx 22rpx 20rpx 22rpx;
  height: 16vh; /* 200rpx */
}
.swiper-item {
  width: 100%;
  height: 16vh;
  border-radius: 6rpx;
}
.sort-box {
  
}
.sort-tab-box {
  width: 186rpx;
  min-width: 186rpx;
  max-height: 71vh;
  overflow-y: scroll;
  border-right: solid 1rpx #e0e0e0;
}
.sort-tab-view {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-top: solid 1rpx #e0e0e0;
  color: #636363;
  font-size: 30rpx;
}
.sort-tab-sel {
  color: white;
  font-size: 34rpx;
  font-weight: 600;
  background-color: #232323;
}

/* 列表 */
.sort-grid {
  flex: 1;
  max-height: 71vh;
  overflow-y: scroll;
  display: grid;
  column-gap: 20rpx;
  row-gap: 20rpx;
  grid-template-rows: repeat(10, 180rpx);
  grid-template-columns: repeat(2, 250rpx);
  /* background-color: salmon; */
}
.item-box {
  width: 250rpx;
  height: 180rpx;
  margin-left: 20rpx;
  position: relative;
}
.item-img {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: violet;
}
.item-mark {
  width: 100%;
  height: 180rpx;
  /* top: 0; */
  bottom: 0;
  position: absolute;
  
  border-radius: 12rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.item-text {
  color: white;
  font-size: 32rpx;
  /* text-indent: 24rpx; */
  /* overflow: hidden; */
}
