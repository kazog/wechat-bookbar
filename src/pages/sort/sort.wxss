/* sort */
.h-container {
    flex: 1;
    padding: 0 8rpx;
    display: flex;
    flex-direction: column;
    background-color: white;
  }
  .tab-box {
    display: flex;
    margin: 0 24rpx;
  }
  .tab-view {
    flex: 1;
    color: #232323;
    font-size: 36rpx;
    font-weight: 700;
    /* text-align: center; */
    line-height: 96rpx;
  }
  .tab-view2 {
    flex: 1;
    color: #878787;
    font-size: 34rpx;
    line-height: 96rpx;
  }
  .tab-hover {}
  .img-hover {
    /* position: relative; */
    opacity: 0.87;
    transform: scale(0.97, 0.97);
    background-color: #F3F3F3;
  }
  /* 话题 */
  .scroll-box {
    width: 100vw;
    height: 168rpx;
    display: flex;
    margin: 0 6rpx;
    margin-bottom: 22rpx;
  }
  .huati-box {
    display: flex;
    margin-right: 8rpx;
  }
  .huati-img {
    width: 168rpx;
    height: 168rpx;
    border-radius: 6rpx;
  }
  .huati-mark {
    position: absolute;
    color: white;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 168rpx;
    height: 168rpx;
    border-radius: 6rpx;
    background-color: rgba(0, 0, 0, 0.2);
  }
  /* 列表 */
  .item-box {
    width: 50%;
  }
  .item-layout {
    overflow: hidden;
    position: relative;
    margin: 6rpx;
    height: 476rpx;
  }
  .item-img {
    width: 100%; 
    height: 100%; 
    border-radius: 12rpx;
  }
  .item-mark {
    width: 100%;
    height: 96rpx;
    /* top: 0; */
    bottom: 0;
    position: absolute;
    /* padding: 0 24rpx; */
    display: flex;
    align-items: center;
    flex-direction: row;
    border-radius: 12rpx;
    background: linear-gradient(#00000010, #00000090);
  }
  
  .item-text {
    font-size: 32rpx;
    color: white;
    text-indent: 24rpx;
    overflow: hidden;
  }