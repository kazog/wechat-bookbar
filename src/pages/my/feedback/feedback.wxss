/* client/pages/my/feedback/feedback.wxss */
.f-box {
  height: 100%;
  display: flex;
  padding: 32px 16px 0 16px;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: center; */
}
.label {
  color: #333333;
  font-size: 32rpx;
  margin-top: 24px;
  margin-bottom: 8px;
}
.input{
  width: 96%;
  font-size: 30rpx;
  padding: 20rpx 2%;
  border-radius: 8rpx;
  border: solid 1px #dddddd;
}
.inputs {
  width: 96%;
  height: 180px;
  font-size: 30rpx;
  padding: 2%;
  border-radius: 8rpx;
  border: solid 1px #dddddd;
}
.btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  margin-top: 32px;
  color: white;
  font-size: 34rpx;
  font-weight: 700;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  background-color: #3dbb5a;
}