/* client/pages/my/login/login.wxss */
.login-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.alert {
  color: orange;
  font-size: 28rpx;
}
.login-bg {
  top: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  /* background-color: rosybrown; */
}

.login-layout {
  z-index: 1;
  display: flex;
  padding: 72rpx 48rpx;
  margin: 0 48rpx;
  flex-direction: column;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 24rpx;
}

.login-input {
  color: white;
  font-size: 32rpx;
  padding: 16rpx 24rpx;
  /* background-color: #EEEEEE; */
  border-radius: 8rpx;
  margin-top: 24rpx;
  border-bottom: solid 1px white;
}

.login-button {
  color: white;
  font-size: 36rpx;
  padding: 18rpx 0;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 42rpx;
  margin-top: 56rpx;
}

.login-button2 {
  font-size: 36rpx;
  text-align: center;
  border-radius: 42rpx;
  margin-top: 48rpx;
  /* background-color: rgba(255, 255, 255, 0.5); */
}

.login-action-layout {
  margin-top: 38rpx;
  display: flex;
  justify-content: space-between;
}

.login-action-view {
  color: #888;
  padding: 6rpx 12rpx;
  font-size: 30rpx;
  display: flex;
}