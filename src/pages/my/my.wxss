/* pages/my/my.wxss */
.m-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    /* background-color: F8F8F8; */
}

.top-bg {
    top: 0;
    width: 100%;
    height: 450rpx;
    position: absolute;
}

.top-layout {
    color: white;
    z-index: 1;
    height: 418rpx;
    padding-left: 32rpx;
    padding-right: 32rpx;
    display: flex;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.3);
}

.user-box {
    width: 100%;
    display: flex;
    align-items: center;
    margin-top: 146rpx;
}

.user-icon {
    width: 128rpx;
    height: 128rpx;
    border-radius: 62rpx;
    margin-right: 32rpx;
}

.user-name {
    font-size: 36rpx;
    font-weight: bold;
}

.user-text {
    font-size: 34rpx;
    font-weight: bold;
}

.user-tab {
    font-size: 28rpx;
    font-weight: normal;
    margin-right: 48rpx;
    margin-left: 8rpx;
}

.user-id {
    font-size: 28rpx;
    padding: 6rpx 0;
    margin-bottom: 16rpx;
}

.actives {
    font-size: 26rpx;
    padding: 6rpx 0;
    margin-bottom: 16rpx;
}

.tab-box {
    z-index: 1;
    display: flex;
    padding: 24rpx 48rpx;
    flex-direction: row;
    justify-content: space-between;
    background-color: white;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    border-bottom: solid #eee 1px;
}

.tab-view {
    width: 146rpx;
    height: 146rpx;
    border-radius: 73rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.menu-list {
    /* margin-top: 56rpx; */
    background-color: white;
}

.item-box {
    height: 96rpx;
    display: flex;
    padding: 0 32rpx;
    align-items: center;
    border-bottom: solid #eee 1px;
}