page {
  --top: 88px;
}
.v-tab-layout {
  width: 100%;
  height: 80rpx;
  top: var(--top);
  z-index: 1;
  display: flex;
  position: fixed;
  flex-direction: row;
  background-color: white;
}
.v-tab-view {
  flex: 1;
  line-height: 56rpx;
  font-size: 36rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium;
  margin: 4rpx 8rpx 0 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.v-tab-line {
  width: 48rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #fe7100;
}
.v-tab-line2 {
  width: 1px;
  height: 4rpx;
}

.v-tab-unselect {
  color: #979797;
  font-size: 28rpx;
}
