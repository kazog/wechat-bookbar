/*  */

.a-item-value {
  color: #393939;
  font-size: 32rpx;
}

.a-tab-value {
  color: #393939;
  font-size: 30rpx;
  line-height: 48rpx;
}

.a-title {
  color: #222222;
  font-size: 34rpx;
  font-weight: 700;
}

.a-label {
  color: #333333;
  font-size: 30rpx;
}
.a-info {
  color: #333333;
  font-size: 26rpx;
}
.a-ellips {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.a-ellip {
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow:ellipsis;
}
.a-indent {
  text-indent: 2em
}